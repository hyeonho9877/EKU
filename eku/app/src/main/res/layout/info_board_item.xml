<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/constraint_layout_info_board"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/border_line_bottom">

    <TextView
        android:id="@+id/text_info_board_writer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/font_noto_sans_kr"
        android:maxHeight="30dp"
        android:text="컴공 고일석"
        android:textColor="@color/black_75"
        android:textSize="13sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_info_board_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:ellipsize="end"
        android:fontFamily="@font/font_noto_sans_kr"
        android:maxEms="10"
        android:maxLines="1"
        android:text="test test"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/image_board_info"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_info_board_writer"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/text_info_board_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/font_noto_sans_kr"
        android:gravity="end"
        android:maxHeight="25dp"
        android:text="2022/05/28"
        android:textColor="@color/black_75"
        android:textSize="11sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/text_info_board_writer" />

    <TextView
        android:id="@+id/text_info_board_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/font_noto_sans_kr"
        android:text="조회수 3"
        android:textAlignment="viewEnd"
        android:textColor="@color/black_50"
        android:textSize="11sp"
        app:layout_constraintBottom_toBottomOf="@+id/text_info_board_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/text_info_board_title" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/image_board_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:adjustViewBounds="true"
        android:background="@drawable/rounded_transparent"
        android:maxWidth="64dp"
        android:maxHeight="64dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/text_info_board_time"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>

