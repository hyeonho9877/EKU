<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/write_announce_title"
        android:layout_width="256dp"
        android:layout_height="40dp"
        android:layout_marginEnd="29dp"
        android:ems="10"
        android:gravity="start|top"
        android:hint="게시글 제목을 입력하세요"
        android:inputType="textMultiLine"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView3"
        tools:layout_editor_absoluteY="100dp" />

    <TextView
        android:id="@+id/write_announce_building"
        android:layout_width="71dp"
        android:layout_height="33dp"
        android:layout_marginTop="20dp"
        android:text="강의동"
        android:textColor="@color/black"
        android:textSize="25sp"
        app:layout_constraintEnd_toStartOf="@+id/write_announce_title"
        app:layout_constraintStart_toStartOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <EditText
        android:id="@+id/write_announce_content"
        android:layout_width="410dp"
        android:layout_height="283dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="100dp"
        android:ems="10"
        android:gravity="start|top"
        android:hint="게시글 내용을 입력하세요"
        android:inputType="textMultiLine"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/write_announce_building" />

    <Button
        android:id="@+id/write_announce_save"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#2952EA"
        android:text="저장"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/write_announce_close"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#4B4B4B"
        android:text="닫기"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <CheckBox
        android:id="@+id/building0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:text="제2공"
        app:layout_constraintStart_toEndOf="@+id/building9"
        app:layout_constraintTop_toTopOf="@+id/building9" />

    <CheckBox
        android:id="@+id/building9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:text="9강"
        app:layout_constraintStart_toEndOf="@+id/building8"
        app:layout_constraintTop_toTopOf="@+id/building8" />

    <CheckBox
        android:id="@+id/building8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:text="8강"
        app:layout_constraintStart_toEndOf="@+id/building7"
        app:layout_constraintTop_toTopOf="@+id/building7" />

    <CheckBox
        android:id="@+id/building7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:text="7강"
        app:layout_constraintStart_toEndOf="@+id/building6"
        app:layout_constraintTop_toTopOf="@+id/building6" />

    <CheckBox
        android:id="@+id/building6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:text="6강"
        app:layout_constraintStart_toEndOf="@+id/write_announce_building"
        app:layout_constraintTop_toTopOf="@+id/write_announce_building" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="296dp"
        android:text="Write"
        android:textColor="@color/kyonggi_color"
        android:textSize="35sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="제목"
        android:textColor="@color/black"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="@+id/textView12"
        app:layout_constraintTop_toTopOf="@+id/write_announce_title" />

</androidx.constraintlayout.widget.ConstraintLayout>
